@model IEnumerable<LCNetv5.Models.Payment>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Loan.getInfo()</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loan.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePmtDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePmtPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmtPaid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Loan.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePmtDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePmtPaid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmtPaid)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
